@using GestionSUM.Services
@using GestionSUM.Models

@model IEnumerable<GestionSUM.Models.Reserva>

<div class="card bg-success text-white shadow-sm mb-4">
    <div class="card-body text-center">
        <h1 class="fw-bolder mb-1">Historial de reservas canceladas</h1>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Horario</th>
            <th>Usuario</th>
            <th>Depto</th>
            <th>Motivo</th>
            <th>Cancelada el</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Fecha.ToShortDateString()</td>
                <td>@r.Turno?.MomentoDelDia
                    @r.Turno?.HoraInicio
                    @r.Turno?.HoraFin
                </td>
                <td>@r.Usuario?.Nombre</td>
                <td>@r.Usuario?.Departamento</td>
                <td>@r.MotivoCancelacion</td>
                <td>@r.FechaCancelacion?.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>

<style>
    body {
        min-height: 100vh;
        background: linear-gradient(135deg, #f4f6f9, #e9ecef);
    }
</style>
