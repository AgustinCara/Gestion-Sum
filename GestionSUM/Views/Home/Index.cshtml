@using GestionSUM.Services
@using GestionSUM.Models
@model IEnumerable<GestionSUM.Models.Reserva>

@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid px-4 px-md-5 mt-5">

    <div class="card glass-card border-0 shadow-lg mb-4 animate-fade-in">
        <div class="card-body text-center py-4">
            <h1 class="display-5 fw-bold text-dark mb-0">Gestión de SUM</h1>
            <div class="h5 text-muted fw-light">Edificio Monte Grande</div>
        </div>
    </div>

    <div class="card glass-card border-0 shadow-sm mb-4 animate-fade-in delay-1">
        <div class="card-body d-flex flex-wrap justify-content-center gap-3">
            <a asp-controller="Home" asp-action="SobreElSum" class="btn btn-dark rounded-pill px-4 shadow-sm hover-lift">
                <i class="bi bi-info-circle me-2"></i> Info SUM
            </a>
            @if (UsuarioActual.Rol == RolUsuario.Administrador)
            {
                <a asp-controller="Usuarios" asp-action="Index" class="btn btn-dark rounded-pill px-4 shadow-sm hover-lift">
                    <i class="bi bi-person me-2"></i> Usuarios
                </a>
            }
            <a asp-controller="Reservas" asp-action="Index" class="btn btn-dark rounded-pill px-4 shadow-sm hover-lift">
                <i class="bi bi-list-ul me-2"></i> Reservas
            </a>
            <a asp-controller="Reservas" asp-action="Calendario" class="btn btn-primary rounded-pill px-4 shadow-sm hover-lift">
                <i class="bi bi-calendar-check me-2"></i> Reservar ahora
            </a>
        </div>
    </div>

    <div class="card glass-card border-0 shadow-lg overflow-hidden mb-5 rounded-4 animate-fade-in delay-2">
        <div class="card-body p-2">
            <div id="carouselSUM" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/sum/sum1.jpg" class="d-block w-75 mx-auto main-carousel-img rounded shadow" alt="SUM 1">
                        <div class="carousel-caption d-none d-md-block bg-black bg-opacity-50 rounded-3 mb-4 mx-auto w-25">
                            <p class="mb-0 fw-bold text-white">Salón Principal</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/sum/sum2.jpg" class="d-block w-75 mx-auto main-carousel-img rounded shadow" alt="SUM 2">
                        <div class="carousel-caption d-none d-md-block bg-black bg-opacity-50 rounded-3 mb-4 mx-auto w-25">
                            <p class="mb-0 fw-bold text-white">Parrilla y Cocina</p>
                        </div>
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselSUM" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon p-3"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselSUM" data-bs-slide="next">
                    <span class="carousel-control-next-icon p-3"></span>
                </button>
            </div>
        </div>
    </div>

</div>

<style>
    body {
        background: radial-gradient(circle at top right, #f8f9fa, #e2e8f0);
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        min-height: 100vh;
    }

    /* Efecto Glassmorphism */
    .glass-card {
        background: rgba(255, 255, 255, 0.6) !important;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3) !important;
    }

    /* Imagen manteniendo tamaño original pero con altura controlada */
    .main-carousel-img {
        height: 450px;
        object-fit: cover;
        filter: brightness(0.9);
    }

    /* Animación de botones */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    /* Flechas del carrusel minimalistas */
    .carousel-control-prev-icon, .carousel-control-next-icon {
        filter: invert(1);
        background-color: rgba(255,255,255,0.5);
        border-radius: 50%;
        background-size: 50%;
    }

    /* --- ANIMACIONES --- */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        opacity: 0;
        animation: fadeIn 0.7s ease-out forwards;
    }

    .delay-1 {
        animation-delay: 0.2s;
    }

    .delay-2 {
        animation-delay: 0.4s;
    }

    .delay-3 {
        animation-delay: 0.6s;
    }
</style>